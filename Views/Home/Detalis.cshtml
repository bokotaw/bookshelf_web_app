@model IsbnBookModel
   
@{
    ViewData["Title"] = "Detalis";
}

<div class="row">
    <div class="col-md-4">
        <img src="@Model.image"/>
        <hr />
        <div class="row">
            <div class="col">
                <a class="btn btn-info" href="@Model.url">To store</a>
            </div>
            <div class="col">
                <a class="btn btn-success">Add to Shelf</a>
            </div>
        </div> 
    </div>
    <div class="col-md-8">
        <h1>@Model.title</h1>
        <h3>@Model.subtitle</h3>
        <h4>@Model.authors, @Model.publisher, @Model.year</h4>
        <hr />
           <p>Ratings: @Model.rating</p>
        <hr />
        <h3>Description</h3>
        <div>
            <p>@Model.desc</p>
        </div>
    </div>
</div>